<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screen.weatherPage.WeatherPageFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/weather_page_card_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/currentWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heavy rain"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="-5sp"
            android:layout_marginBottom="@dimen/default_margin"
            android:gravity="top"
            app:layout_constraintBottom_toTopOf="@+id/materialDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/currentTemperature"
            android:layout_width="89dp"
            android:layout_height="86dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="top"
            android:lineSpacingExtra="-22sp"
            android:text="24"
            android:textColor="@color/white"
            android:textSize="72sp"
            app:layout_constraintBottom_toTopOf="@+id/currentWeather"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/currentWeekDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="@dimen/default_margin"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="-5sp"
            android:text="Sunday"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/currentTemperature"
            app:layout_constraintEnd_toStartOf="@+id/separatingLineImageView"
            app:layout_constraintTop_toBottomOf="@id/currentWeatherInPicture"/>

        <TextView
            android:id="@+id/currentDayAndNumberOfMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nov 14"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="-5sp"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="@dimen/default_margin"
            app:layout_constraintBottom_toTopOf="@+id/currentTemperature"
            app:layout_constraintStart_toEndOf="@+id/separatingLineImageView"
            app:layout_constraintTop_toBottomOf="@id/currentWeatherInPicture" />

        <ImageView
            android:id="@+id/degreeImageView"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/degree"
            android:layout_marginStart="95dp"
            android:layout_marginTop="115dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/separatingLineImageView"
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="@dimen/default_margin"
            android:src="@drawable/separating_line"
            app:layout_constraintTop_toBottomOf="@id/currentWeatherInPicture"
            app:layout_constraintBottom_toTopOf="@+id/currentTemperature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/currentWeatherInPicture"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/sun_cloud_angled_rain"
            app:layout_constraintBottom_toTopOf="@+id/separatingLineImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/materialDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="320dp"
            android:layout_marginHorizontal="@dimen/default_margin"
            app:dividerColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>