<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/recycler_view_background">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="@string/time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Now" />

    <ImageView
        android:id="@+id/weatherDependingOnTheTimeInPicture"
        android:layout_width="24dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/minimumOfTemperatureInCurrentHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/min_temp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/separatingLineTemperature"
        app:layout_constraintEnd_toStartOf="@+id/separatingLineTemperature"
        app:layout_constraintTop_toBottomOf="@+id/weatherDependingOnTheTimeInPicture"
        tools:text="20" />

    <ImageView
        android:id="@+id/separatingLineTemperature"
        android:layout_width="8dp"
        android:layout_height="14dp"
        android:layout_marginTop="7dp"
        android:scaleType="centerCrop"
        android:src="@drawable/slash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weatherDependingOnTheTimeInPicture" />

    <TextView
        android:id="@+id/maximumOfTemperatureInCurrentHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/max_temp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/separatingLineTemperature"
        app:layout_constraintStart_toEndOf="@+id/separatingLineTemperature"
        app:layout_constraintTop_toBottomOf="@+id/weatherDependingOnTheTimeInPicture"
        tools:text="24" />

    <ImageView
        android:id="@+id/minimumTemperatureDegree"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/degree"
        app:layout_constraintStart_toEndOf="@+id/minimumOfTemperatureInCurrentHour"
        app:layout_constraintTop_toTopOf="@+id/minimumOfTemperatureInCurrentHour" />

    <ImageView
        android:id="@+id/maximumTemperatureDegree"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/degree"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/maximumOfTemperatureInCurrentHour"
        app:layout_constraintTop_toTopOf="@+id/maximumOfTemperatureInCurrentHour" />


    <TextView
        android:id="@+id/precipitationIPercentOnHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/duration_of_rain"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separatingLineTemperature"
        tools:text="3Ñ‡" />

</androidx.constraintlayout.widget.ConstraintLayout>