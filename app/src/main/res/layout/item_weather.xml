<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/recycler_view_background">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/weatherDependingOnTheTimeInPicture"
        app:layout_constraintStart_toStartOf="@+id/weatherDependingOnTheTimeInPicture"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Now" />

    <ImageView
        android:id="@+id/weatherDependingOnTheTimeInPicture"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:src="@drawable/cloud_angled_rain"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="11dp"/>

    <TextView
        android:id="@+id/minimumOfTemperatureInCurrentHour"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/separatingLineTemperature"
        app:layout_constraintEnd_toStartOf="@+id/separatingLineTemperature"
        app:layout_constraintTop_toTopOf="@+id/separatingLineTemperature"
        tools:text="20" />

    <TextView
        android:id="@+id/separatingLineTemperature"
        android:layout_width="6dp"
        android:layout_height="14dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        tools:text="/"
        app:layout_constraintEnd_toEndOf="@+id/weatherDependingOnTheTimeInPicture"
        app:layout_constraintStart_toStartOf="@+id/weatherDependingOnTheTimeInPicture"
        app:layout_constraintTop_toBottomOf="@+id/weatherDependingOnTheTimeInPicture" />

    <TextView
        android:id="@+id/maximumOfTemperatureInCurrentHour"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="24"
        app:layout_constraintBottom_toBottomOf="@+id/separatingLineTemperature"
        app:layout_constraintStart_toEndOf="@+id/separatingLineTemperature"
        app:layout_constraintTop_toTopOf="@+id/separatingLineTemperature"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/degree"
        app:layout_constraintStart_toEndOf="@+id/minimumOfTemperatureInCurrentHour"
        app:layout_constraintTop_toTopOf="@+id/minimumOfTemperatureInCurrentHour" />

    <ImageView
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/degree"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/maximumOfTemperatureInCurrentHour"
        app:layout_constraintTop_toTopOf="@+id/maximumOfTemperatureInCurrentHour" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="12dp"
        tools:text="74% rain"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separatingLineTemperature"/>
</androidx.constraintlayout.widget.ConstraintLayout>