<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/weather_fragment_background"
    tools:context=".presentation.screen.manageLocation.ManageLocationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/manageLocationPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/fragment_manage_location_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/manageLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/manage_location"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/arrow_back" />

        <ImageButton
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:background="@color/blue_jeans"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SearchView
            android:id="@+id/manageLocationSearchView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:layout_marginTop="37dp"
            android:background="@drawable/search_view_background"
            android:iconifiedByDefault="false"
            android:inputType="text"
            android:queryHint="@string/search_view_default_text"
            android:searchIcon="@drawable/magnifier"
            android:closeIcon="@drawable/close"
            android:theme="@style/SearchViewTextTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/manageLocationTextView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchViewRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wet_asphalt"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:layout_marginTop="8dp"
            android:elevation="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manageLocationSearchView"
            tools:listitem="@layout/item_city_name_search_view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/savedCitiesRecView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manageLocationSearchView"
            tools:listitem="@layout/item_saved_city_names" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>